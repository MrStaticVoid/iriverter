package org.thestaticvoid.iriverter;

import java.io.*;

public class Config {
	public static final String PREFIX = "@prefix@";
	public static final String DATADIR = "@datadir@";
	public static final String VERSION = "@VERSION@";

	public static String getPackageDataDir() {
		String dataDir = DATADIR;
		int prefixIndex = dataDir.indexOf('}');
		if (prefixIndex >= 0)
			dataDir = PREFIX + dataDir.substring(prefixIndex + 1);
		
		if (new File(dataDir + File.separator + "iriverter").exists())
			return dataDir + File.separator + "iriverter";

		return ".";
	}
}
