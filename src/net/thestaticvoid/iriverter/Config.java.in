package net.sourceforge.iriverter;

import java.io.*;

public class Config {
	public static final String PREFIX = "@prefix@";
	public static final String DATADIR = "@datadir@".replaceAll("\\$\\{prefix\\}", PREFIX);
	public static final String VERSION = "@VERSION@";

	public static String getPackageDataDir() {
		if (new File(DATADIR + "/iriverter").exists())
			return DATADIR + "/iriverter";

		if (new File("../share/iriverter").exists())
			return "../share/iriverter";

		return "";
	}
}
