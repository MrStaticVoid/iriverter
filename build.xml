<?xml version="1.0"?>
<project name="iriverter" default="jar" basedir=".">
	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />
	<property name="jar.dir" value="jar" />
	<property name="dist.dir" value="dist" />

	<condition property="swt.dir" value="lib/swt-M20060921-0945-gtk-linux-x86">
		<os family="unix" />
	</condition>
	<condition property="swt.dir" value="lib/swt-M20060921-0945-win32-win32-x86">
		<os family="windows" />
	</condition>
	<path id="swt.classpath">
		<fileset dir="${swt.dir}" includes="*.jar" />
	</path>

	<target name="compile">
		<mkdir dir="${build.dir}" />

		<copy todir="${build.dir}">
			<fileset dir="${src.dir}" excludes="**/*.java" />
		</copy>

		<javac srcdir="${src.dir}" destdir="${build.dir}" classpathref="swt.classpath" />
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/iriverter.jar" basedir="${build.dir}" />
	</target>

	<target name="dist" depends="jar">
		<mkdir dir="${dist.dir}" />

		<copy file="${jar.dir}/iriverter.jar" todir="${dist.dir}" />

		<copy todir="${dist.dir}">
			<fileset dir="lib/swt-M20060921-0945-gtk-linux-x86" includes="*.jar" />
			<globmapper from="swt*" to="swt-gtk-linux*" />
		</copy>

		<copy todir="${dist.dir}">
			<fileset dir="lib/swt-M20060921-0945-win32-win32-x86" includes="*.jar" />
			<globmapper from="swt*" to="swt-win32-win32*" />
		</copy>
	</target>

	<target name="run" depends="jar">
		<java classname="org.thestaticvoid.iriverter.ConverterUI" fork="true">
			<jvmarg value="-Djava.library.path=${swt.dir}" />
			<classpath>
				<pathelement location="${jar.dir}/iriverter.jar" />
				<fileset dir="${swt.dir}" includes="*.jar" />
			</classpath>
		</java>
	</target>

	<target name="clean">
		<delete dir="${build.dir}" />
		<delete dir="${jar.dir}" />
		<delete dir="${dist.dir}" />
	</target>
</project>
